---
import ProjectDetails from "@components/ProjectDetails.astro";
import { projects } from "@data/cv_es.json";
---

<section>
  <h2
    class="mb-6 text-3xl font-semibold text-neutral-700 dark:text-neutral-300"
  >
    Proyectos
  </h2>

  <article
    class="grid auto-cols-fr grid-cols-1 place-content-center gap-4 px-2 md:grid-cols-2"
  >
    {
      projects.map(({ name, description, keywords, url, finished }) => (
        <ProjectDetails
          title={name}
          description={description}
          stack={keywords}
          url={url}
          finished={finished}
        />
      ))
    }
  </article>
</section>
